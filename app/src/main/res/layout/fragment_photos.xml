<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatsap.statussaver.fragment.PhotosFragment"
    android:padding="@dimen/dp_10">


    <GridView
        android:id="@+id/gv_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:columnWidth="@dimen/dp_100"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="@dimen/dp_10"
        android:focusable="true"
        android:clickable="true"
        android:fastScrollEnabled="true"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/img_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/info_icon"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_info_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/img_info_icon"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/info_msg_color"
        android:textSize="17sp"
        android:text="@string/msg_warn_no_images_available"
        android:visibility="gone"/>

</RelativeLayout>
